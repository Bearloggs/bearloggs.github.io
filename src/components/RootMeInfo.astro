---
interface Props {
  username?: string;
}

const { username = 'Bearloggs' } = Astro.props;
---

<div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 w-full h-full">
  <h2 class="text-2xl font-bold mb-4">Root Me Profile</h2>
  <div class="flex items-center space-x-4">
    <img 
      src="https://www.root-me.org/IMG/siteon0.svg" 
      alt="Root Me Logo" 
      class="w-12 h-12"
    />
    <div>
      <h3 class="text-xl font-semibold">
        <a 
          href={`https://www.root-me.org/${username}`}
          target="_blank"
          rel="noopener noreferrer"
          class="text-blue-600 dark:text-blue-400 hover:underline"
        >
          {username}
        </a>
      </h3>
      <p class="text-gray-600 dark:text-gray-300">
        Check out my Root Me profile for CTF challenges and security exercises
      </p>
    </div>
  </div>
</div> 