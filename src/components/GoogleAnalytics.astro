const GA_MEASUREMENT_ID = 'GTM-MCSQN49N'; // Replace with your actual Google Analytics ID
---

<!-- Google Analytics Script -->
<script is:inline define:vars={{ GA_MEASUREMENT_ID }}>
  // Define dataLayer and gtag function
  window.dataLayer = window.dataLayer || [];
  function gtag() { dataLayer.push(arguments); }
  
  // Default to denied until consent is given
  gtag('consent', 'default', {
    'analytics_storage': 'denied'
  });
  
  // Initialize gtag
  gtag('js', new Date());
  gtag('config', GA_MEASUREMENT_ID, {
    anonymize_ip: true,
    cookie_flags: 'SameSite=None;Secure'
  });
</script>

<!-- Load the Google Analytics script -->
<script is:inline async src={`https://www.googletagmanager.com/gtag/js?id=GTM-MCSQN49N`}></script>
